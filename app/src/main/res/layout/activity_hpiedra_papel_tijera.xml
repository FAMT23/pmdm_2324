<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut02.ut02e08_A1_PiedraPapelTijera">

    <TextView
        android:id="@+id/u1e6tvMarcadorRobot"
        android:layout_width="122dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6imgRobot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/u1e6imgRobot"
        app:layout_constraintTop_toBottomOf="@+id/u1e6imgRobot" />

    <TextView
        android:id="@+id/u1e6tvEleccionRobot"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_marginTop="424dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6imgRobot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/u1e6imgRobot"
        app:layout_constraintTop_toBottomOf="@+id/u1e6imgRobot" />

    <TextView
        android:id="@+id/u1e6tvEleccionHumano"
        android:layout_width="117dp"
        android:layout_height="70dp"
        android:layout_marginTop="424dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6imgHumano"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/u1e6imgHumano"
        app:layout_constraintTop_toBottomOf="@+id/u1e6imgHumano" />

    <TextView
        android:id="@+id/u1e6tvMarcadorHumano"
        android:layout_width="117dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6imgHumano"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="@+id/u1e6imgHumano"
        app:layout_constraintTop_toBottomOf="@+id/u1e6imgHumano" />

    <ImageView
        android:id="@+id/u1e6imgRobot"
        android:layout_width="117dp"
        android:layout_height="132dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walee" />

    <ImageView
        android:id="@+id/u1e6imgHumano"
        android:layout_width="117dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persona" />

    <ImageView
        android:id="@+id/u1e6imgPapel"
        android:layout_width="128dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6tvEleccionHumano"
        app:layout_constraintTop_toBottomOf="@+id/u1e6tvMarcadorHumano"
        app:srcCompat="@drawable/h_papel" />

    <ImageView
        android:id="@+id/u1e6imgPiedra"
        android:layout_width="90dp"
        android:layout_height="108dp"
        app:layout_constraintEnd_toStartOf="@+id/u1e6tvMarcadorRobot"
        app:layout_constraintStart_toEndOf="@+id/u1e6tvMarcadorHumano"
        app:layout_constraintTop_toBottomOf="@+id/u1e6tvMarcadorRobot"
        app:srcCompat="@drawable/h_piedra_2" />

    <ImageView
        android:id="@+id/u1e6imgTijera"
        android:layout_width="131dp"
        android:layout_height="87dp"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="@+id/u1e6tvEleccionRobot"
        app:layout_constraintStart_toStartOf="@+id/u1e6tvEleccionRobot"
        app:layout_constraintTop_toBottomOf="@+id/u1e6tvMarcadorRobot"
        app:srcCompat="@drawable/h_tijera" />

    <TextView
        android:id="@+id/u1e6tvResultado"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_marginBottom="160dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/u1e6tvEleccionRobot"
        app:layout_constraintStart_toStartOf="@+id/u1e6tvEleccionHumano" />

    <Button
        android:id="@+id/u1e6btReiniciar"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:text="Reiniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/u1e6tvEleccionRobot"
        app:layout_constraintStart_toStartOf="@+id/u1e6tvEleccionHumano" />

</androidx.constraintlayout.widget.ConstraintLayout>